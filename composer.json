{
    "name": "corllete/silex-mongodb-provider",
    "description": "Silex 2.x MongoDB Service Provider - MongoDB PHP Library",
    "keywords": ["mongodb", "mongo", "silex", "php", "php library", "corllete"],
    "license": "MIT",
    "authors": [
        {
            "name": "Miro Yovchev",
            "email": "m.yovchev@corllete.com"
        }
    ],
    "require": {
        "php": "~5.6||~7.0",
        "mongodb/mongodb": "^1.0.0",
        "pimple/pimple": "~3.0",
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Corllete\\SilexMongoDB\\" : "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Corllete\\SilexMongoDB\\Tests\\" : "tests/" }
    }
}
